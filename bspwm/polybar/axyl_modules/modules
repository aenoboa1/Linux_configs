[module/spotify]
type = custom/script
tail = true
; prefix symbol is shown before the text
;format-background = #a3add2
format-background = ${color.spotify_back}

format-prefix = " "
format-prefix-foreground = #FFFFFF
format = <label> <exec>
exec =  ~/.config/i3/polybar/polybar-spotify/scroll_spotify_status.sh
label = %output%
label-foreground = #FFFFFF
label-font = 7

[module/spotify-prev]
type = custom/script
exec = echo "%{F#ECEFF4}  "
label-foreground = ${color.dracula-bg}
;format-background = #a3add2
format-background = ${color.spotify_back}
format = <label>

click-left = playerctl previous -p spotify

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo "%{F#ECEFF4}懶"
hook-1 = echo "%{F#ECEFF4}懶"
initial = 1
click-left = playerctl play-pause -p spotify
;format-background = #a3add2
format-background = ${color.spotify_back}

[module/spotify-next]
format-background = ${color.spotify_back}
type = custom/script
exec = echo "%{F#ECEFF4} "
format = <label>
click-left = playerctl next -p spotify
label-background = ${color.spotify_back}
;label-background = #a3add2
