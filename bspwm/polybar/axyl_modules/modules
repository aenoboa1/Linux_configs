[module/bspwm]
type = internal/bspwm

pin-workspaces = true
inline-mode = false

enable-click = true
enable-scroll = true
reverse-scroll = true

fuzzy-match = true

ws-icon-0=I;
ws-icon-1=II;
ws-icon-2=III;
ws-icon-3=IV;
ws-icon-4=V;
ws-icon-5=VI;
ws-icon-6=VII;漣
ws-icon-default = 

format = <label-state>
format-font = 2

label-monitor = %name%

label-focused = %name%
#label-focused-foreground = #f5cd4a
#label-focused-underline =  #f5cd4a
label-focused-foreground = ${color.workspace}
label-focused-underline =  ${color.workspace}

label-focused-background = ${color.background}
label-focused-padding = 1

label-occupied = %name%
label-occupied-foreground = ${color.nord8}
;label-occupied-foreground = #414a4c


label-occupied-background = ${color.background}
;label-occupied-underline =
label-occupied-padding = 1

label-urgent = %name%
label-urgent-foreground = ${color.red}
label-urgent-background = ${color.background}
label-urgent-underline =  ${color.red}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${color.nord6}
label-empty-padding = 1

; Separator in between workspaces
label-separator = "∙"
label-separator-padding = 0
label-separator-foreground = ${color.altblack}

