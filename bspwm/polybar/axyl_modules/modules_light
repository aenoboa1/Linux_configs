[module/keyboard]
type = internal/xkeyboard

format-foreground = ${color.diff_change}
; List of indicators to ignore
blacklist-0 = num lock
blacklist-1 = scroll lock
; Available tags:
;   <label-layout> (default)
;   <label-indicator> (default)
format = <label-layout> <label-indicator>
format-background = ${color.purple}
format-prefix = 
; Available tokens:
;   %layout%
;   %name%
;   %number%
; Default: %layout%
label-layout = " %layout%"
indicator-icon-1 = caps lock;-CL;
label-indicator-on-capslock = CL
label-indicator-on-capslock-foreground = ${color.red}



;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/time]
type = internal/date
interval = 1
format-margin = 0
time = "%I:%M %p"
time-alt = "%A, %m/%d/%y"

format-prefix = 
format-prefix-background = ${color.blue}
format-prefix-foreground = ${color.diff_change}

label = %time%
label-foreground = ${color.diff_change}
label-background = ${color.blue}
label-padding = 1

