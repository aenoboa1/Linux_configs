[module/title]
type = internal/xwindow


; Available tags:
;   <label> (default)
format = <label>
format-background = ${color.background}
;format-foreground = #D8DEE9

format-foreground = ${color.title}


format-padding = 4

; Available tokens:
;   %title%
; Default: %title%
label =   %title%
label-maxlen = 70
; Used instead of label when there is no window title
; Available tokens:
;   None
label-empty = Desktop
label-empty-font = 0
label-empty-foreground = #707880
label-underline =${color.blue}
label-font = 1

