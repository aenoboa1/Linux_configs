[module/keyboard]
type = internal/xkeyboard

format-foreground = ${color.dracula-bg}
; List of indicators to ignore
blacklist-0 = num lock
blacklist-1 = scroll lock
; Available tags:
;   <label-layout> (default)
;   <label-indicator> (default)
format = <label-layout> <label-indicator>
format-background = ${color.magenta}
format-prefix = 
; Available tokens:
;   %layout%
;   %name%
;   %number%
; Default: %layout%
label-layout = " %layout%"
indicator-icon-1 = caps lock;-CL;
label-indicator-on-capslock = CL
label-indicator-on-capslock-foreground = ${color.m-dark-red}


; Available tokens:
;   %name%
; Default: %name%
label-indicator-on = %name%
label-indicator-on-foreground = ${color.dracula-bg}
label-foreground = ${color.dracula-bg}
format-full-prefix = " "
format-full-prefix-font = 2






